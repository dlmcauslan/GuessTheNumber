<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/guess_a_number_between_0_and_10"
        android:textSize="18sp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_remaining_guesses"
        app:layout_constraintEnd_toEndOf="@+id/tv_remaining_guesses"
        app:layout_constraintStart_toStartOf="@+id/tv_remaining_guesses"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_remaining_guesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/you_have_X_guesses_remaining"
        android:textSize="18sp"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/et_guess_value"
        app:layout_constraintEnd_toEndOf="@+id/et_guess_value"
        app:layout_constraintStart_toStartOf="@+id/et_guess_value"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/et_guess_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="51dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_guess"
        app:layout_constraintEnd_toEndOf="@+id/bt_guess"
        app:layout_constraintStart_toStartOf="@+id/bt_guess"
        app:layout_constraintTop_toBottomOf="@+id/tv_remaining_guesses" />

    <Button
        android:id="@+id/bt_guess"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/guess"
        android:textSize="24sp"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_guess_value" />

</androidx.constraintlayout.widget.ConstraintLayout>